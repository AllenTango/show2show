<view class="page">
  <view class="page__bd page__bd_spacing">
    <view class="kind-list">
      <block wx:for="{{list}}" wx:key="index">
        <view class="kind-list__item">
          <scroll-view class="scroll-view_H" scroll-x="true" bindscroll="scroll" style="width: 100%">
            <view class="scroll-view-item_H" style="background-color:{{item.flag ? 'gainsboro' : 'white'}}">
              <view index="{{item.index}}" class="weui-flex kind-list__item-hd">
                <view class="weui-flex__item">
                <text>{{item.name}} </text>
                <text class="weui-badge">{{item.count}}</text>
                </view>
                <image class="kind-list__img" src="/images/icons/icon_nav_form.png"></image>
              </view>
            </view>
            <view class="scroll-view-item_H">
              <view class="markItem" bindtap="mark" data-flag="{{item.flag}}" data-index="{{index}}">
                <view wx:if="{{item.flag}}">标记已完成</view>
                <view wx:else>标记未完成</view>
              </view>
            </view>
            <view class="scroll-view-item_H">
              <view class="delItem" catchtap="del" data-index="{{index}}">删除</view>
            </view>
          </scroll-view>
        </view>
      </block>
    </view>
  </view>
</view>