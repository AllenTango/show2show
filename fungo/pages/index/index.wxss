.page__bd {
  padding-top: 40px;
}

.kind-list__item {
  position: relative;
  margin: 10px 0;
  background-color: white;
  border-radius: 2px;
  overflow: hidden;
  /* border: 1px solid deepskyblue; */
}

.kind-list__item-hd {
  padding: 10px;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}

.kind-list__img {
  width: 40rpx;
  height: 40rpx;
}

.hiddenItem {
  position: absolute;
  width: 100%;
  height: 90rpx;
  left: 0;
  top: 0;
  z-index: -1;
}

.showItem {
  position: absolute;
  width: 100%;
  height: 90rpx;
  left: 0;
  top: 0;
  z-index: 0;
}

.delItem {
  position: absolute;
  width: 150rpx;
  right: 0;
  background-color: red;
  color: white;
  text-align: center;
  line-height: 90rpx;
}

.done, .not {
  position: absolute;
  width: 200rpx;
  right: 150rpx;
  background-color: deepskyblue;
  color: white;
  text-align: center;
  line-height: 90rpx;
}