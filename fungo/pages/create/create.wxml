<view class="page">
  <view class="page__bd">
    <view class="weui-cells__title">点滴积累</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">任务名称</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="Let's Do it!" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">任务介绍</view>
        </view>
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" style="height: 3.3em;padding: 25rpx 0;" />
          <!-- <view class="weui-textarea-counter">0/200</view> -->
        </view>
      </view>
    </view>

    <view class="weui-cells__title">任务目标</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">任务目标</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="100 天！" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">提醒时间</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
            <view class="weui-input">{{time}}</view>
          </picker>
        </view>
      </view>
    </view>
    <view class='weui-footer weui-footer_fixed-bottom'>
      <view class="weui-btn-area">
        <button class="weui-btn" type="primary">创建</button>
      </view>
    </view>
  </view>

</view>